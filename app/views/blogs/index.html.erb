<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="large-6 columns">
<h1>My way, My style</h1>
<% for blog in @blogs %>
  <div class="blog">
    <%= image_tag(blog.slika) %>
    <h3><%= blog.naslov %></h3>
    <%= sanitize(blog.opis) %>
    <%= blog.created_at.strftime('%I:%M %b %d, %Y')%>
  </div>
  <% end %>
</div>